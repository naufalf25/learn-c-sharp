<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="728" Width="1366">
    <Window.Background>
        <ImageBrush ImageSource="images/background.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <Grid>
        <Grid x:Name="CenterGrid" Margin="350,230,350,230">
            <Grid x:Name="Deck" Margin="79,30,333,30">
                <TextBlock x:Name="DeckCount" Text="0" Margin="15,45,205,111" />
                <Image Source="images/card/uno.png" Width="130" />
            </Grid>
        </Grid>
        <Grid x:Name="TopCardGrid" Margin="350,60,350,520"></Grid>
        <Grid x:Name="BottomCardGrid" Margin="350,520,350,60"></Grid>
        <Grid x:Name="LeftCardGrid" Margin="60,100,1150,100"></Grid>
        <Grid x:Name="RightCardGrid" Margin="1150, 100, 60, 100"></Grid>
    </Grid>
</Window>
