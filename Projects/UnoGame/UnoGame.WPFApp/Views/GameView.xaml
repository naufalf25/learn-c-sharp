<UserControl x:Class="UnoGame.WPFApp.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:UnoGame.WPFApp.ViewModels"
             xmlns:helper="clr-namespace:UnoGame.WPFApp.Helper"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnoGame.WPFApp.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:GameViewModel}">
    <UserControl.Resources>
        <helper:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helper:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding PlayerCards}" Margin="50" HorizontalAlignment="Left">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="30" HorizontalAlignment="Center">
                        <Image Source="pack://application:,,,/Resources/Card/uno.png" Width="90" Height="130"/>
                        <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontFamily="Bahnschrift" Foreground="White" FontWeight="Bold" FontSize="20" TextAlignment="Center"/>
                            <TextBlock Text="{Binding CardCount, StringFormat={}{0} cards}" FontFamily="Bahnschrift" Foreground="LightGray" FontSize="18" TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Grid x:Name="OverlayPanel"
              Background="#EE000000"
              Visibility="{Binding OverlayNextPlayer}"
              Panel.ZIndex="100"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding CurrentPlayer.Name, StringFormat=Next Player: {0}}" 
                   FontSize="24" Foreground="White" FontWeight="Bold" TextAlignment="Center" />
                <TextBlock Text="Please make sure others are not looking at the screen." 
                   FontSize="18" Foreground="LightGray" FontStyle="Italic" TextAlignment="Center" Margin="0,10,0,0"/>
                <Button Content="Ready" Command="{Binding ReadyCommand}" Width="200" FontFamily="Bahnschrift" FontSize="16" Margin="0,30" />
            </StackPanel>
        </Grid>
        <ListBox ItemsSource="{Binding GameLog}" x:Name="GameLogListBox"
                 Grid.Row="2" Grid.Column="1"
                 Width="400" Height="300" Margin="10"
                 Background="#CC000000" Foreground="White"
                 FontSize="14" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Content="Call UNO" Command="{Binding CallUnoCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Visibility="{Binding CalledUnoButton}" 
                Margin="100,200" Padding="20,10" FontSize="20" Background="OrangeRed" Foreground="White"/>
        <StackPanel Visibility="{Binding IsStackedActive, Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,300">
            <TextBlock Text="You can counter the draw!" Foreground="Yellow" FontSize="16"/>
            <Button Content="Take Draw Instead" Command="{Binding TakeDrawCommand}" 
                    Margin="0,10,0,0" Padding="10,5" FontSize="14" Background="DarkRed" Foreground="White" FontFamily="Bahnschrift" FontWeight="DemiBold" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding IsColorPickerVisibility}">
            <TextBlock Text="Pick New Color:" Foreground="White" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" />
            <StackPanel Orientation="Horizontal"
            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10">
                <Button Background="Red" Command="{Binding PickColorCommand}" CommandParameter="Red" Width="50" Height="50" Margin="5"/>
                <Button Background="Yellow" Command="{Binding PickColorCommand}" CommandParameter="Yellow" Width="50" Height="50" Margin="5"/>
                <Button Background="Green" Command="{Binding PickColorCommand}" CommandParameter="Green" Width="50" Height="50" Margin="5"/>
                <Button Background="Blue" Command="{Binding PickColorCommand}" CommandParameter="Blue" Width="50" Height="50" Margin="5"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding CenterTable}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Command="{Binding DataContext.DrawCardCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Background="Transparent"
                        Width="90"        
                        Height="135">
                    <Image Source="pack://application:,,,/Resources/Card/uno.png"            
                           Stretch="UniformToFill" />
                </Button>
                <StackPanel Margin="20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Cards to Draw:" Foreground="White" FontSize="16" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" />
                    <TextBlock Text="{Binding DrawCardCount, StringFormat={}{0} cards}" FontSize="20" Foreground="White" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" />
                    <TextBlock Text="Discard Pile:" FontSize="16" Foreground="White" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" Margin="0,20,0,0" />
                    <TextBlock Text="{Binding DiscardPileCount, StringFormat={}{0} cards}" FontSize="20" Foreground="White" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" />
                    <TextBlock Text="Current Card Color:" Foreground="White" FontSize="16" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" Margin="0,20,0,0" />
                    <TextBlock Text="{Binding CurrentColor}" FontSize="20" Foreground="White" FontFamily="Bahnschrift" FontWeight="DemiBold" TextAlignment="Center" />
                </StackPanel>
            </StackPanel>
            <Image Source="{Binding TopCard.ImagePath}" 
                   Stretch="UniformToFill"
                   Width="85"
                   Height="130"/>
        </StackPanel>
        <StackPanel Margin="0,50" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock Text="Current Hand:" FontFamily="Bahnschrift" FontSize="16" Foreground="White" TextAlignment="Center" />
            <TextBlock Text="{Binding CurrentPlayer.Name}" FontFamily="Bahnschrift" FontSize="20" Foreground="White" TextAlignment="Center" />
            <ItemsControl ItemsSource="{Binding PlayerHand}" Margin="0,30,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.PlayCardCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Card}"
                                Width="90" Background="Transparent" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="-20,10,-20,0" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="2" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="LightGoldenrodYellow" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding CanPlay}" Value="True">
                                            <Setter Property="Margin" Value="-20,-20,-20,30" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
