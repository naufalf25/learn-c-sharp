<UserControl x:Class="UnoGame.WPFApp.Views.PlayerCountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:UnoGame.WPFApp.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UnoGame.WPFApp.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PlayerCountViewModel}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Select Number of Players" FontSize="40" Foreground="White" FontFamily="Bahnschrift" HorizontalAlignment="Center" />
            <ComboBox SelectedItem="{Binding SelectedPlayerCount}" ItemsSource="{Binding PlayerOptions}" Width="200" FontSize="35" FontFamily="Bahnschrift" Margin="0,40,0,0" />
            <Button Content="Confirm" Command="{Binding ConfirmCommand}" Width="150" Height="50" FontFamily="Bahnschrift" FontSize="30" Margin="0,100,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
