<UserControl x:Class="UnoGame.WPFApp.Views.EndGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:UnoGame.WPFApp.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnoGame.WPFApp.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:EndGameViewModel}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding WinnerName, StringFormat=Winner: {0}}" 
                   FontSize="36" Foreground="Gold" FontFamily="Bahnschrift" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Text="🎉 Congratulations!" FontFamily="Bahnschrift" FontSize="30" Foreground="White" TextAlignment="Center" Margin="0,20"/>
            <Button Content="Back to Main Menu" Command="{Binding BackToMainMenuCommand}" FontFamily="Bahnschrift" FontWeight="DemiBold" Padding="10,20" Margin="0,150,0,10" FontSize="24"/>
            <Button Content="Exit Game" Command="{Binding ExitGameCommand}" FontFamily="Bahnschrift" FontWeight="DemiBold" Padding="10,20" Margin="0,20" FontSize="24"/>
        </StackPanel>
    </Grid>
</UserControl>
