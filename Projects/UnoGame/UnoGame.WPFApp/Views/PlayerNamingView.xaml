<UserControl x:Class="UnoGame.WPFApp.Views.PlayerNamingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:UnoGame.WPFApp.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnoGame.WPFApp.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PlayerNamingViewModel}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Player Names" FontSize="40" FontFamily="Bahnschrift" Foreground="White" />
            <ItemsControl Margin="0,50,0,0" ItemsSource="{Binding PlayerNames}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,10" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Label}" FontFamily="Bahnschrift" Foreground="White" FontWeight="DemiBold" FontSize="15" Width="200" TextAlignment="Center" />
                            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="Bahnschrift" FontSize="20" Width="200" Margin="0,5" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Confirm" Command="{Binding ConfirmCommand}" FontFamily="Bahnschrift" FontSize="30" Width="150" Height="50" Margin="0,100,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
