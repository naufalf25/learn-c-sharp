<Window x:Class="UnoGame.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoGame.WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Width="1366" Height="728">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/background.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <Grid Width="Auto" Height="Auto">
        <ContentControl x:Name="MainContent" />
    </Grid>
</Window>
